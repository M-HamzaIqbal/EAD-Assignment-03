@model IEnumerable<ModernTelephoneDirectory.Models.contact>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="container-fluid bg">
        <div class="row">
            <div class="col-lg-12">
                <div id="content">
                    <h1>
                        Find your loved one
                    </h1>
                    <h3>
                        A modern telephone directory
                    </h3>
                </div>
                <form action="/Home/AddRecord">
                    <input type="submit" class="btn btn-success" onclick="if (!(prompt('Please Enter password\nhint:1234')=='1234')) return false" value="Add person" />
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <form method="post" action="/Home/Index" class="form container">
        <div class="input-group bg-dark rounded-pill">
            <label>Select City </label>
            <select name="SelectedCity" class="list-group-item">
                <option value="all" >ALL</option>
                @foreach (var cit in ViewBag.cities)
                {
                <option value=@cit >@cit</option>
                }
                
            </select>
            <br />
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </form>
</div>
<hr />
<div class="container-fluid table-responsive">

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Phone#</th>
                <th>Email</th>
                <th>City</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var s in Model)
            {
            <tr>
                <td>@s.Name</td>
                <td>@s.Phone</td>
                <td>@s.Email</td>
                <td>@s.City</td>
                <td><a href="/Home/EditContact/@s.Id" onclick="if (!(prompt('Please Enter password\nhint:1234')=='1234')) return false">Edit</a> /
                <a href="/Home/DeleteContact/@s.Id" onclick="if (!(prompt('Please Enter password\nhint:1234')=='1234')) return false">Delete</a></td>
            </tr>
            }

        </tbody>
    </table>
</div>


